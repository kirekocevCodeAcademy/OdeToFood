@model OdeToFood.Models.UserRoleViewModel

<h2>Add user to role</h2>

<form asp-controller="AdminRole" asp-action="AddUserToRole">
    <input type="hidden" name="roleId" value="@Model.RoleId" />
    <div class="form-group">
        <label asp-for="Users" class="control-label"></label>
        <div class="col-md-offset-2 col-md-10">
            <select asp-for="UserId" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))" class="form-control">
                <option value="">Please select a user</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-primary" value="Add to role" type="submit" />
            <a asp-action="Index" class="btn btn-primary">Done</a>
        </div>
    </div>    
</form>