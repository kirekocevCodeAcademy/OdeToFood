@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@model IEnumerable<OdeToFood.Core.Auth.ApplicationUser>

<h2>User management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>User ID</th>
            <th>User name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>

        @foreach (OdeToFood.Core.Auth.ApplicationUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>

                <td>
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                        <button type="submit" onclick="return confirm('Do you really want to delete this user?');" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}

<p>
    <a class="btn btn-primary" asp-action="AddUser">Add new user</a>
</p>
