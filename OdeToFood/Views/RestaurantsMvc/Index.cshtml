@model OdeToFood.Models.RestaurantsIndexViewModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants MVC List</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" placeholder="search" asp-for="@Model.SearchTerm">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Cuisine</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                @restaurant.Name
            </td>
            <td>
                @restaurant.Location
            </td>
            <td>
                @restaurant.Cuisine
            </td>
            <td>
                <a class="btn btn-outline-secondary" asp-action="Detail" asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa-search-plus"></i>
                </a>
                <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="btn btn-outline-secondary" asp-action="Delete" asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-primary" asp-controller="RestaurantsMvc" asp-action="Edit">Add Restaurant</a>

@if (TempData.Keys.Contains("Message"))
{
    <div class="alert alert-info">@TempData["Message"]</div>
}
@section footer{
    <div>
        @Model.Message
    </div>
}