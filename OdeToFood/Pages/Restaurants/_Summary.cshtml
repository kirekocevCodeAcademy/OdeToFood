@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-outline-secondary" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-search-plus"></i>
        </a>
        <a class="btn btn-outline-secondary" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-outline-secondary" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-trash"></i>
        </a>
    </div>

</div>