@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants List</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" placeholder="search" asp-for="SearchTerm">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>

    </div>
</form>

@foreach (var restaturnat in Model.Restaurants)
{
    <partial name="_Summary" model="restaturnat"/>
}

<a class="btn btn-primary" asp-page="./Edit">Add Restaurant</a>

@if (!string.IsNullOrEmpty(Model.TempMessage))
{
    <div class="alert alert-info">@Model.TempMessage</div>
}
@section footer{
    <div>
        @Model.Message
    </div>
}